@layouts.app()
  <div class="flex text-gray-100 h-full">
    <div
      class="w-1/2 flex-grow flex justify-center items-center bg-card-color border-2 border-card-border-color shadow-xl rounded-md m-10"
    >
      <img src="{{ skin.imagePath }}" alt="" class="h-96 w-max" />
    </div>
    <div class="w-1/2 flex flex-col justify-between flex-grow my-10 mr-10">
      <h1 class="font-bold text-2xl">
        {{ skin.name }}
      </h1>
      <h2 class="mt-5 font-semibold text-3xl">
        R${{ skin.price }}
      </h2>
      <p class="mt-10 text-base">
        {{{ skin.description?.replace('\\n\\n', '<br>') }}}
      </p>
      <div class="mt-5">
        @if(skin.stattrak)
          <div class="flex items-center">
            <div class="bg-orange-500 h-6 w-6 rounded-full">
            </div>
            <p class="font-semibold text-base mx-1">
              StatTrak
            </p>
          </div>
        @endif
        @if(skin.souvenir)
          <div class="flex items-center mt-6">
            <div class="bg-yellow-500 h-6 w-6 flex rounded-full">
            </div>
            <p class="font-semibold text-base mx-1">
              Souvenir
            </p>
          </div>
        @endif
      </div>
      <div class="mt-10 text-center pb-3">
        @!component('components/button', { classe: 'w-full h-10' })
      </div>
    </div>
  </div>
@end
